{
  "name": "skryu-timeline",
  "version": "1.2.0",
  "description": "A timeline management project.",
  "browser": "lib/index.b.js",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "author": "chym123",
  "license": "MIT",
  "scripts": {
    "dev": "npx babel -w --extensions .ts,tsx src -d lib --copy-files",
    "build": "npx rollup -c",
    "release": "git push --follow-tags origin master && npm publish",
    "example": "npm run hs & npm run browser",
    "hs": "hs -c-1 --cors",
    "browser": "open-cli http://localhost:8080/doc/example/index.html",
    "prepublishOnly": "npm run test && npm run build",
    "lint:js": "eslint --config .eslintrc --fix --ext .js,.jsx,.ts,.tsx src",
    "lint:style": "stylelint --fix src/**/*.{less,scss,css}",
    "test": "jest --rootDir ./src --passWithNoTests",
    "test:w": "jest --watchAll --rootDir ./src --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:chym123/skryu-timeline.git"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/jest": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.1.0",
    "babel-plugin-import": "^1.12.0",
    "commitizen": "^4.0.3",
    "commitlint-config-cz": "^0.12.1",
    "cz-conventional-changelog": "^3.2.0",
    "cz-customizable": "^6.2.0",
    "eslint": "^6.0.1",
    "eslint-config-imweb": "^0.2.19",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "http-server": "^0.12.3",
    "husky": "^3.0.0",
    "jest": "^26.1.0",
    "lint-staged": "^9.2.0",
    "open-cli": "^5.0.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "rollup": "^1.25.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript": "^1.0.1",
    "standard-version": "^8.0.2",
    "stylelint": "^10.1.0",
    "stylelint-config-css-modules": "^1.4.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-scss": "^3.9.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.6.4"
  },
  "lint-staged": {
    "*.{css,less,scss}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{jsx,js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
